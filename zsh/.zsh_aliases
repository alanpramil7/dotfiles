alias v='nvim'
alias e='exit'
alias c='clear'
alias u='sudo pacman -Syu --noconfirm && yes | yay -Syu'
alias pacin='sudo pacman -S'
alias f='cd "$(find "$HOME" -type d 2> /dev/null | fzf)"'
alias ff='cd "$(find "${1:-$HOME}" -type d 2>/dev/null | fzf)" && tmux new-session -A -s "$(basename "$(pwd)")"'
alias ss='shutdown now'
alias bat='upower -i $(upower -e | grep '/battery') | grep -E "state|time to full|time to empty|percentage"'
alias l='ls -la --color'
alias ls='ls --color'
alias bb='nvim ~/.zshrc'
alias zz='source ~/.zshrc'
alias gs='git status'
alias gpp='git push'
alias gp='git pull'
alias gaa='git add .'
alias gccm='git commit -m'
alias gc='git clone'
alias gl='git log'
alias gd='git diff'
alias vnvim='nvim ~/.config/nvim'
alias vvim='vim ~/.vimrc'
alias mr='make run'
alias vr='vim ~/.config/river'
alias yz='yazi'
alias zr='zig build run'
